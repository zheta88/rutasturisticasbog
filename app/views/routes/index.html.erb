<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.nombre %></td>
        <td><%= route.descripcion %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <div class = "imagen" image_tag ("https://files.slack.com/files-pri/TPKLL0YTF-FPKBA29U4/image.png")>
        </div>
    <% end %>
  </tbody>
</table>

<br>

